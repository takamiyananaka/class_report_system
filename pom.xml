    <properties>
        <java.version>17</java.version>
    </properties>
    <dependencies>

        <!-- Spring Web - REST API -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-web</artifactId>
        </dependency>
        
        <!-- MyBatis-Plus (includes MyBatis) -->
