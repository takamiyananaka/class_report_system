    </parent>
    <groupId>com.nanaka.maven</groupId>
    <artifactId>class_report_system</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>class_report_system</name>
    <description>class_report_system</description>
    <url/>
    <licenses>
        <license/>
