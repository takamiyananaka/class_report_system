<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xuegongbu.mapper.AdminMapper">
    
    <resultMap id="BaseResultMap" type="com.xuegongbu.entity.Admin">
        <id column="id" property="id"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="real_name" property="realName"/>
        <result column="phone" property="phone"/>
        <result column="email" property="email"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <select id="findByUsername" resultMap="BaseResultMap">
        SELECT * FROM tb_admin WHERE username = #{username}
    </select>

    <select id="findById" resultMap="BaseResultMap">
        SELECT * FROM tb_admin WHERE id = #{id}
    </select>

    <insert id="insert" parameterType="com.xuegongbu.entity.Admin" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO tb_admin (username, password, real_name, phone, email, status)
        VALUES (#{username}, #{password}, #{realName}, #{phone}, #{email}, #{status})
    </insert>

    <update id="update" parameterType="com.xuegongbu.entity.Admin">
        UPDATE tb_admin
        <set>
            <if test="password != null">password = #{password},</if>
            <if test="realName != null">real_name = #{realName},</if>
            <if test="phone != null">phone = #{phone},</if>
            <if test="email != null">email = #{email},</if>
            <if test="status != null">status = #{status},</if>
        </set>
        WHERE id = #{id}
    </update>

</mapper>
